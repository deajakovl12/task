<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whole_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/photo_focused_padding">

    <RelativeLayout
        android:id="@+id/layout_black"
        android:layout_width="@dimen/photo_focused_layout_out_width"
        android:layout_height="@dimen/photo_focused_layout_out_height"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent" />

    <RelativeLayout
        android:id="@+id/layout_blue"
        android:layout_width="@dimen/photo_focused_layout_in_width"
        android:layout_height="@dimen/photo_focused_layout_in_height"
        android:layout_centerInParent="true"
        android:background="@android:color/black" />

    <RelativeLayout
        android:id="@+id/layout_transparent"
        android:layout_width="@dimen/photo_focused_layout_transparet_widht"
        android:layout_height="@dimen/photo_focused_transpared_height"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/lib_photo"
        android:layout_width="@dimen/photo_focused_image_width"
        android:layout_height="@dimen/photo_focused_image_height"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />
</RelativeLayout>
