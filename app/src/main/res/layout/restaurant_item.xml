<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restaurant_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/restaurant_item_margin_bottom_top"
    android:layout_marginLeft="@dimen/restaurant_item_margin_left_right"
    android:layout_marginRight="@dimen/restaurant_item_margin_left_right"
    android:layout_marginTop="@dimen/restaurant_item_margin_bottom_top"
    android:background="@drawable/round_background"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/restaurant_item_padding">


    <ImageView
        android:id="@+id/restaurant_item_food_icon"
        android:layout_width="@dimen/restaurant_item_icon_width_height"
        android:layout_height="@dimen/restaurant_item_icon_width_height"
        android:src="@drawable/food" />

    <ImageView
        android:id="@+id/restaurant_item_location_icon"
        android:layout_width="@dimen/restaurant_item_icon_width_height"
        android:layout_height="@dimen/restaurant_item_icon_width_height"
        android:layout_marginTop="@dimen/restaurant_item_margin_top_8"
        android:src="@drawable/map_marker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_item_food_icon" />

    <TextView
        android:id="@+id/restaurant_item_name"
        android:layout_width="@dimen/restaurant_item_text_width"
        android:layout_height="@dimen/restaurant_item_text_height"
        android:layout_marginStart="@dimen/restaurant_item_margin_top_8"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@id/restaurant_item_delete"
        app:layout_constraintStart_toEndOf="@+id/restaurant_item_food_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_item_address"
        android:layout_width="@dimen/restaurant_item_text_width"
        android:layout_height="@dimen/restaurant_item_text_height"
        android:layout_marginStart="@dimen/restaurant_item_margin_start"
        android:layout_marginTop="@dimen/restaurant_item_margin_top_8"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@id/restaurant_item_delete"
        app:layout_constraintStart_toEndOf="@+id/restaurant_item_location_icon"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_item_name" />


    <ImageView
        android:id="@+id/restaurant_item_delete"
        android:layout_width="@dimen/restaurant_item_delete_icon_widht_height"
        android:layout_height="@dimen/restaurant_item_delete_icon_widht_height"
        android:layout_marginBottom="@dimen/restaurant_item_delete_icon_margin_bottom"
        android:layout_marginEnd="@dimen/restaurant_item_delete_icon_margin_end"
        android:layout_marginTop="@dimen/restaurant_item_delete_icon_margin_top"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/restaurant_item_delete_icon_padding"
        android:src="@drawable/delete_forever"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
